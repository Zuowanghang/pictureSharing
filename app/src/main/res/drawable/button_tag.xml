<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 填充的颜色 -->
    <solid android:color="@color/white" />

    <!--  将矩形的四个角设置为圆形  -->
    <corners android:radius="20dp" />

    <!--  边框颜色  -->
    <stroke
        android:width="1dp"
        android:color="@color/gray3" />

    <padding
        android:bottom="3dp"
        android:left="10dp"
        android:right="10dp"
        android:top="3dp" />
</shape>